{
  "manifest_version": 2,
  "name": "AI Chat Exporter (HTML-first)",
  "version": "0.1.0",
  "description": "Copy AI chat threads as rich HTML (LibreOffice/Word friendly) with plain text fallback.",
  "permissions": ["contextMenus", "activeTab", "clipboardWrite", "downloads"],
  "background": { "scripts": ["background.js"], "persistent": false },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://*.grok.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "mathjax/tex-mml-chtml.js",
    "assets/mathml2omml.xsl"
  ],
  "icons": { "48": "icons/icon48.png", "96": "icons/icon96.png" },
  "applications": { "gecko": { "id": "ai-chat-exporter@example" } }
}
