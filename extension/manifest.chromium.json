{
  "manifest_version": 3,
  "name": "GPT LATEX Ctrl-C Ctrl-V",
  "version": "0.2.0",
  "description": "Copy browser selections to clipboard in Office-compatible format, preserving formatting and converting LaTeX formulas to Microsoft Equation (OMML) format.",
  "permissions": ["contextMenus", "activeTab", "clipboardWrite", "storage", "downloads", "tabs", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "constants.js",
        "lib/cof-diag.js",
        "lib/cof-core.js",
        "lib/cof-wasm.js",
        "lib/cof-selection.js",
        "lib/cof-xslt.js",
        "lib/cof-clipboard.js",
        "lib/cof-ui.js",
        "lib/cof-storage.js",
        "lib/cof-anchor.js",
        "lib/cof-analysis.js",
        "lib/cof-translate.js",
        "content-script.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/mathml2omml.xsl", "wasm/tex_to_mathml.wasm"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": { "48": "icons/icon48.png", "96": "icons/icon96.png" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "48": "icons/icon48.png", "96": "icons/icon96.png" }
  },
  "options_ui": { "page": "options.html", "open_in_tab": true }
}
