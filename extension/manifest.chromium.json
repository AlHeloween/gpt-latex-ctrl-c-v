{
  "manifest_version": 3,
  "name": "Copy as Office Format",
  "version": "0.2.0",
  "description": "Copy browser selections to clipboard in Office-compatible format, preserving formatting and converting LaTeX formulas to Microsoft Equation (OMML) format.",
  "permissions": ["contextMenus", "activeTab", "clipboardWrite", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["constants.js", "content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["mathjax/tex-mml-chtml.js", "assets/mathml2omml.xsl", "page-mathjax-bridge.js", "wasm/tex_to_mathml.wasm"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": { "48": "icons/icon48.png", "96": "icons/icon96.png" }
}
